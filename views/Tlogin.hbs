<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Gijgo date‑picker -->
  <link
    href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css"
    rel="stylesheet"
  />

  <title>Sign up</title>
</head>
<body>
<section class="vh-120" style="background-color:#839dce">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow" style="border-radius:1rem">
          <div class="card-body p-5">

            <h3 class="mb-4 text-center">Sign in</h3>

            <!-- *****  FORM  ***** -->
            <!-- adjust action="/auth/login" (or /register) per your route -->
            <form action="/auth/Tlogin" method="POST">
              <!-- first name -->
              <div class="mb-3">
                <input
                  type="text"
                  name="fname"
                  class="form-control form-control-lg"
                  placeholder="First name"
                  required
                />
              </div>

              <!-- last name -->
              <div class="mb-3">
                <input
                  type="text"
                  name="lname"
                  class="form-control form-control-lg"
                  placeholder="Last name"
                  required
                />
              </div>

              <!-- email -->
              <div class="mb-3">
                <input
                  type="email"
                  name="email"
                  class="form-control form-control-lg"
                  placeholder="Email"
                  required
                />
              </div>
              <!-- Password -->
              <div class="mb-3">
                <input
                  type="Password"
                  name="Password"
                  class="form-control form-control-lg"
                  placeholder="Password"
                  required
                />
              </div>
              <!-- confirmPassword -->
              <div class="mb-3">
                <input
                  type="Password"
                  name="confirmassword"
                  class="form-control form-control-lg"
                  placeholder="confirm Password"
                  required
                />
              </div>

              <!-- gender -->
              <div class="mb-3">
                <label class="form-label d-block mb-1">Gender</label>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="gender"
                    value="male"
                    required
                  />
                  <label class="form-check-label">Male</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="gender"
                    value="female"
                  />
                  <label class="form-check-label">Female</label>
                </div>
              </div>

              <!-- university -->
              <!-- UNIVERSITY -->
<div class="mb-3">
  <label class="form-label">University</label>
  <select id="university" name="university" class="form-select" required>
    <option value="" selected disabled>Select your university</option>
    <option value="FS Tetouan">Faculté des Sciences (Tétouan)</option>
    <option value="Faculté Économie">Faculté d’Économie</option>
    <option value="Faculté LH">Faculté LH</option>
  </select>
</div>

<!-- COURSES (hidden until a university is chosen) -->
<div id="course-wrapper" class="mb-4 d-none">
  <label class="form-label">Course</label>
  <select id="course" name="course" class="form-select" required></select>
</div>


              <!-- birth date -->
              <div class="mb-4">
                <input
                  id="datepicker"
                  name="birthdate"
                  placeholder="Date of birth"
                  class="form-control form-control-lg"
                  required
                />
              </div>

              <!-- role picker  -->
              <!-- submit -->
              <button
                class="btn btn-primary btn-lg w-100"
                type="submit"
              >
                Register
              </button>
            </form>
            <!-- *****  /FORM  ***** -->

          </div>
        </div>
      </div>
    </div>
  </div>
  {{#if message}}
  <h4 class="alert alert-danger mt-4">{{message}}</h4>
  {{/if}}
</section>

<!-- scripts: jquery (for gijgo) then gijgo date‑picker then bootstrap bundle -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js"></script>
<script>
  $('#datepicker').datepicker({ uiLibrary: 'bootstrap5', format: 'yyyy-mm-dd' });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
<script src="/scripts/script.js"></script>
</body>
</html>
